<!--    </record>-->

    <!-- Clinic Accountant Group -->
    <record id="group_clinic_accountant" model="res.groups">
        <field name="name">Clinic Billing Staff</field>
        <field name="category_id" ref="clinic_management.module_category_clinic"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="sequence">10</field> <!-- Lowest priority -->
    </record>
</odoo>