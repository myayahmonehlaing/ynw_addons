<odoo>
    <!-- Create Clinic category -->
    <record id="module_category_clinic" model="ir.module.category">
        <field name="name">Clinic</field>
        <field name="sequence">15</field>
        <field name="description">Access groups related to clinic management</field>
    </record>

    <!-- Clinic Manager Group -->
    <record id="group_clinic_manager" model="res.groups">
        <field name="name">Clinic Manager</field>
        <field name="category_id" ref="clinic_management.module_category_clinic"/>
        <field name="sequence">40</field> <!-- Highest priority -->
    </record>

    <!-- Clinic Doctor Group -->
    <record id="group_clinic_doctor" model="res.groups">
        <field name="name">Clinic Doctor</field>
        <field name="category_id" ref="clinic_management.module_category_clinic"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="sequence">30</field>
    </record>

    <!-- Clinic Receptionist Group -->
    <record id="group_clinic_receptionist" model="res.groups">
        <field name="name">Clinic Receptionist</field>
        <field name="category_id" ref="clinic_management.module_category_clinic"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="sequence">20</field>
    </record>

