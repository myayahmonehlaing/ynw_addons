<odoo>
    <record id="view_users_form_clinic_inherit" model="ir.ui.view">
        <field name="name">res.users.form.clinic.access.level</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <!-- 100% safe and compatible location -->
            <xpath expr="//field[@name='login']" position="after">
                <field name="clinic_access_level"/>
            </xpath>

        </field>
    </record>

</odoo>
