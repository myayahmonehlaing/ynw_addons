<odoo>
    <!-- Add usage_note to Sale Order Line -->
    <record id="view_order_form_inherit_usage_note" model="ir.ui.view">
        <field name="name">sale.order.form.usage.note</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <field name="usage_note"/>
            </xpath>
        </field>
    </record>

    <!-- Add usage_note to Invoice Line -->
    <record id="view_invoice_form_inherit_usage_note" model="ir.ui.view">
        <field name="name">account.move.form.usage.note</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="usage_note"/>
            </xpath>
        </field>
    </record>
</odoo>
