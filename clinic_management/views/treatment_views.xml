<odoo>
    <record id="view_clinic_treatment_list" model="ir.ui.view">
        <field name="name">clinic.treatment.list</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-primary="state == 'confirmed'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_treatment_search" model="ir.ui.view">
        <field name="name">clinic.treatment.search</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id"/>
                <field name="appointment_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="view_clinic_treatment_form" model="ir.ui.view">
        <field name="name">clinic.treatment.form</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,done,cancelled"/>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"
                            groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_doctor"/>
                    <button name="action_create_invoice"
                            string="Create Invoice"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'confirmed' or invoice_count > 0"
                            groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_accountant"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state not in ('draft','confirmed')"
                            groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_doctor"/>
                    <button name="action_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state not in ('cancelled','done')"
                            groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_doctor"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="appointment_id" readonly="state != 'draft'"/>
                            <field name="patient_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="doctor_id" readonly="state != 'draft'"/>
                            <field name="date_start" readonly="state != 'draft'"/>
                            <field name="date_end" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="pricelist_id" readonly="state != 'draft'"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="room_id" readonly="state != 'draft'"/>
                            <!--                            <field name="treatment_product_id" readonly="state != 'draft'"/>-->
                        </group>
                    </group>

                    <notebook>
                        <page string="Treatment Lines">
                            <field name="line_ids" context="{'default_currency_id': currency_id}">
                                <list editable="bottom">
                                    <field name="product_id" string="Product" readonly="parent.state != 'draft'"/>
                                    <field name="usage_note" readonly="parent.state != 'draft'"/>
                                    <field name="quantity" readonly="parent.state != 'draft'"/>
                                    <field name="product_uom_id" readonly="parent.state != 'draft'"/>
                                    <field name="price" readonly="parent.state != 'draft'"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                </list>
                            </field>

                            <div class="oe_subtotal_footer" style="margin-top: 10px;">
                                <table class="table table-sm table-borderless" style="width: 100%;">
                                    <tr>
                                        <td style="width: 50%;"></td>
                                        <td class="text-end" colspan="2">
                                            <strong>Total:</strong>
                                            <field name="amount_total"
                                                   widget="monetary"
                                                   readonly="1"
                                                   options="{'currency_field': 'currency_id'}"
                                                   style="margin-left: 8px; font-weight: bold; font-size: 1.3rem;"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </page>
                    </notebook>

                    <div class="oe_button_box" name="button_box" style="margin-top: 10px;">
                        <!-- Invoice Smart Button -->
                        <button name="action_view_invoices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                invisible="invoice_count == 0"
                                groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_accountant">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>

                        <!-- Delivery Smart Button -->
                        <button name="action_view_deliveries"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                invisible="delivery_count == 0"
                                groups="clinic_management.group_clinic_manager,clinic_management.group_clinic_accountant">
                            <field name="delivery_count" widget="statinfo" string="Deliveries"/>
                        </button>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_clinic_treatment" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="res_model">clinic.treatment</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_clinic_treatment_search"/>
    </record>
</odoo>
