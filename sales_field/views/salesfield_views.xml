<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_tree_inherit_department" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.department</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="department" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree_inherit_department_1" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.department.1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_list_upload"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="department" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree_inherit_department_2" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.department.2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="department" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
