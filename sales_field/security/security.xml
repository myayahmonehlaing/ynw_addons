<odoo>
    <data noupdate="1">
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

        <!-- Record Rule: Manager Sees All Records -->
        <record id="rule_manager_all_records" model="ir.rule">
            <field name="name">Manager Access All Records</field>
            <field name="model_id" ref="sale.model_sale_order"/> <!-- Replace! -->
            <field name="domain_force">[(1, '=', 1)]</field> <!-- Allow access to ALL -->
            <field name="groups" eval="[(4, ref('sales_field.group_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="sales_team.group_sale_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('sales_field.group_manager'))]"/>
        </record>

    </data>
</odoo>


