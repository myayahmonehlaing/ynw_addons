<odoo>
    <record id="sale_order_form_view_inherit_payment_first" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.payment.first</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_open_payment_wizard" type="object" string="Pay" class="oe_highlight"
                        invisible="state != 'sale'"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_payments"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bars"
                        invisible="payment_count==0">
                    <field name="payment_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
