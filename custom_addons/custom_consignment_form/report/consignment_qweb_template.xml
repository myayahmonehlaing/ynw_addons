<odoo>

    <record id="action_report_consignment_pdf" model="ir.actions.report">
        <field name="name">Consignment Report</field>
        <field name="model">consignment.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_consignment_form.report_consignment_document</field>
        <field name="report_file">custom_consignment_form.report_consignment_document</field>
        <field name="print_report_name">'Consignment_Report_%s' % object.order_date</field>
    </record>

    <template id="report_consignment_document">
        <t t-call="web.external_layout">
            <t t-set="order_date" t-value="order_date or (data and data.get('order_date'))"/>
            <t t-set="date_end" t-value="order_date + ' 23:59:59'"/>

            <main class="page">
                <h2>Consignment Report</h2>
                <p>Date:
                    <t t-esc="order_date"/>
                </p>

                <t t-set="orders"
                   t-value="env['consignment.order'].search([('date_order', '&lt;=', date_end)])"/>

                <t t-set="lines" t-value="orders.mapped('order_line_ids')"/>
                <t t-set="products" t-value="lines.mapped('product_id').filtered(lambda p: p)"/>
                <t t-set="partners" t-value="orders.mapped('partner_id').filtered(lambda p: p)"/>

                <t t-if="products and partners">
                    <table class="table table-sm mt32">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <t t-foreach="partners" t-as="partner">
                                    <th>
                                        <t t-esc="partner.name"/>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products" t-as="product">
                                <tr>
                                    <td>
                                        <t t-esc="product.name"/>
                                    </td>
                                    <t t-foreach="partners" t-as="partner">
                                        <td>
                                            <t t-set="remain_qty"
                                               t-value="sum([l.remaining_qty_at_date(order_date) for l in lines if l.product_id.id == product.id and l.order_id.partner_id.id == partner.id])"/>
                                            <t t-esc="remain_qty or 0"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <p style="color:red;">No consignment records up to this date.</p>
                </t>
            </main>

        </t>
    </template>

</odoo>
