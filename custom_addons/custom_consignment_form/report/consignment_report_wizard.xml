<odoo>
    <record id="view_consignment_report_wizard" model="ir.ui.view">
        <field name="name">consignment.report.wizard.form</field>
        <field name="model">consignment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Consignment">
                <group>
                    <field name="order_date"/>
                </group>
                <footer>
                    <button name="action_export_excel" string="Download Excel" type="object" class="btn-primary"/>
                    <button name="action_export_pdf" string="Download PDF" type="object" class="btn-secondary"/>
                    <button name="action_open_pivot" string="View Pivot" type="object" class="btn-info"/>
                    <button string="Cancel" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_consignment_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Consignment</field>
        <field name="res_model">consignment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_print_consignment"
              name="Print Consignment"
              parent="sale.menu_sale_report"
              action="action_consignment_report_wizard"
              sequence="50"/>

</odoo>
