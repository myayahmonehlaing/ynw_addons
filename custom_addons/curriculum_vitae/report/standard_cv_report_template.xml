<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="standard_cv_report_template">
            <!-- Use standard Odoo header and footer -->
            <!--        <t t-set="company" t-value="user.company_id or env['res.company'].browse(1)"/>-->
            <!--            <t t-call="web.external_layout_standard">-->
            <t t-call="web.external_layout">
                <main class="page">
                    <t t-foreach="docs" t-as="doc">
                        <table class="table">
                            <tr>
                                <td style="width: 25%; text-align: center; vertical-align: middle;">
                                    <span t-field="doc.image"
                                          t-options="{'widget': 'image', 'style': 'height: 2in'}"/>
                                </td>
                                <td style="vertical-align: middle;">
                                    <h2>
                                        <span t-field="doc.name"/>
                                    </h2>
                                    <br/>
                                    <h5>Apply Job:
                                        <span t-field="doc.apply_job"/>
                                    </h5>
                                    <h5>Expect Salary:
                                        <span t-field="doc.salary"/>
                                        MMK
                                    </h5>
                                </td>
                            </tr>
                        </table>

                        <h4 style="background-color: pink; color: white;">Personal Particulars</h4>
                        <table class="table">
                            <tr>
                                <td style="width: 25%">Date of Birth</td>
                                <td>
                                    <span t-field="doc.dob"/>
                                </td>
                            </tr>
                            <tr>
                                <td>NRC</td>
                                <td>
                                    <span t-field="doc.nrc"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Nationality</td>
                                <td>
                                    <span t-field="doc.nationality"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Phone</td>
                                <td>
                                    <span t-field="doc.phone"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <span t-field="doc.email"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Current Address</td>
                                <td>
                                    <span t-field="doc.address"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td>
                                    <span t-field="doc.gender"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Marital Status</td>
                                <td>
                                    <span t-field="doc.marital"/>
                                </td>
                            </tr>
                        </table>

                        <h4 style="background-color: pink; color: white;">Career Objectives</h4>
                        <div style="width:100%; min-height:100px;">
                            <span t-field="doc.objective"/>
                        </div>
                        <div style="page-break-after: always;"></div>
                    </t>
                </main>
            </t>
        </template>
    </data>
</odoo>
