<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_fixdis" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.fixdis</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='discount']" position="after">
                <field name="fixed_discount" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_form_inherit_fixdis" model="ir.ui.view">
        <field name="name">account.move.form.inherit.fixdis</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount']" position="after">
                <field name="fixed_discount" optional="show" readonly="0" />
            </xpath>
        </field>
    </record>
</odoo>
