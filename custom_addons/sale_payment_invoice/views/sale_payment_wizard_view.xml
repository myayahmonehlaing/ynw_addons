<odoo>
    <record id="view_sale_payment_wizard_form" model="ir.ui.view">
        <field name="name">sale.payment.wizard.form</field>
        <field name="model">sale.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Pay">
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="payment_method_id"/>
                            <field name="recipient_bank_account_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" readonly="1"/>
                            <field name="payment_date"/>
                            <field name="communication" string="Memo"/>
                        </group>
                    </group>

                    <group>
                        <field name="payment_difference" readonly="1" invisible="payment_difference==0"/>
                        <field name="payment_difference_handling" widget="radio" invisible="payment_difference==0"/>
                        <field name="writeoff_account_id" domain="[('deprecated', '=', False)]" invisible="payment_difference_handling!= 'reconcile'"/>
                        <field name="writeoff_label" invisible="payment_difference_handling!= 'reconcile'"/>
                    </group>

                    <footer>
                        <button string="Create Payment" type="object" name="create_payment" class="btn-primary"/>
                        <button string="Discard" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
