<odoo>
  <record id="view_order_form_inherit_prepayment" model="ir.ui.view">
    <field name="name">sale.order.form.prepayment</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_open_prepayment_wizard" type="object"
                string="Pay" class="btn-secondary"
                attrs="{'invisible': [('state', '!=', 'sale')]}"/>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="Prepayments">
          <field name="prepayment_ids">
            <tree editable="bottom">
              <field name="payment_date"/>
              <field name="amount"/>
              <field name="payment_method"/>
              <field name="note"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
