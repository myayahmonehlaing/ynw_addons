<odoo>
  <record id="view_prepayment_wizard" model="ir.ui.view">
    <field name="name">sale.prepayment.wizard.form</field>
    <field name="model">sale.prepayment.wizard</field>
    <field name="arch" type="xml">
      <form string="Record Prepayment">
        <group>
          <field name="sale_order_id" invisible="1"/>
          <field name="payment_date"/>
          <field name="amount"/>
          <field name="payment_method"/>
          <field name="note"/>
        </group>
        <footer>
          <button string="Confirm" type="object" name="record_prepayment" class="btn-primary"/>
          <button string="Cancel" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
