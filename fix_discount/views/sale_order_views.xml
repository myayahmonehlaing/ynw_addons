<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_fixdis" model="ir.ui.view">
        <field name="name">sale.order.form.fixdis</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="order_line"]/list//field[@name="discount"]' position="after">
<!--                <field name="fixdis" optional="show"/>-->
                <field name="fixdis" string="Fix Discount" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
