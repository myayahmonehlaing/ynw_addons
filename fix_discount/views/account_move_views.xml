<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_add_fixdis" model="ir.ui.view">
    <field name="name">account.move.form.add.fixdis</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='discount']" position="after">
            <field name="fixdis" string="Fix Discount" optional="show"/>
        </xpath>
    </field>
</record>
</odoo>


